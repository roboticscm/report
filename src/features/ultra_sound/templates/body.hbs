    <div style="display: flex; flex-direction: column; padding-right: 2px;">
        <div class="space-between w-100">
            <div class="vertical-center-box">
                <div>
                    Mã KH/Patient ID
                </div>

                <div>
                    <img src={{patientIdAsBarCode}} alt="{{patientId}}">
                </div>

                <div>
                    {{patientId}}
                </div>
            </div>

            <div class="vertical-center-box">
                <div class='report-title' style="margin-top: 20px;">
                    {{reportTitle}}
                </div>
            </div>

            <div class="vertical-center-box">
                <div>
                    Mã HS/Report ID
                </div>

                <div>
                    <img src={{reportIdAsBarCode}} alt="{{reportId}}">
                </div>

                <div>
                    {{reportId}}
                </div>
            </div>
        </div>

        <div class="dashed-border space-between w-100" style="margin-top: 6px;">
            <div style="flex: 0; padding: 2px;">
                <img class="default-qrcode" src="{{patientIdAsQrCode}}" alt={{patientId}}>
            </div>
            <div style="flex: 1; padding: 2px;">
                <div class="space-between">
                    <div style="width: 25%;" class="no-wrap"><span class="bold">Họ và tên</span> <span
                            class="italic">(Full
                            name)</span>:</div>
                    <div style="width: 43%;" class="uppercase bold">{{patientFullName}}</div>
                    <div style="width: 20%;" class="no-wrap"><span class="bold">Giới tính</span> <span
                            class="italic">(Sex)</span>:</div>
                    <div style="width: 12%;" class="bold">{{patientGender}}</div>
                </div>
                <div class="space-between">
                    <div style="width: 25%;" class="no-wrap"><span class="bold">Địa chỉ</span> <span
                            class="italic">(Address)</span>:</div>
                    <div style="width: 43%;">{{patientAddress}}</div>
                    <div style="width: 20%;" class="no-wrap"><span class="bold">Năm sinh</span> <span
                            class="italic">(DOB)</span>:</div>
                    <div style="width: 12%;">{{patientDateOfBirth}}</div>
                </div>

                <div class="space-between">
                    <div style="width: 25%;" class="no-wrap"><span class="bold">Chỉ định</span> <span
                            class="italic">(Referred by)</span>:</div>
                    <div style="width: 43%;">{{patientReferredBy}}</div>
                    <div style="width: 20%;" class="no-wrap"><span class="bold">Ngày khám</span> <span
                            class="italic">(Date)</span>:</div>
                    <div style="width: 12%;">{{examDate}}</div>
                </div>
            </div>
        </div>
    </div>
    <div style="page-break-after: always;">
        Content page 1
