<style>
    {{fontawesome-css}}  
</style>

<div class="vertical-box w-100" style="margin-left: 45px; margin-right: 26px;">
    <div class="space-between w-100" style="height: 50px;">
        [[HEAD]]
    </div>

    <div class="space-between w-100">
        <div class="vertical-center-box">
            <div class="default-font-size">
                Mã KH/Patient ID
            </div>

            <div>
                <img src={{patientIdAsBarCode}} alt="{{patientId}}">
            </div>

            <div class="default-font-size">
                {{patientId}}
            </div>
        </div>

        <div class="vertical-center-box">
            <div class='report-title' style="margin-top: 20px;">
                {{reportTitle}}
            </div>
        </div>

        <div class="vertical-center-box">
            <div class="default-font-size">
                Mã HS/Report ID
            </div>

            <div>
                <img src={{reportIdAsBarCode}} alt="{{reportId}}">
            </div>

            <div class="default-font-size">
                {{reportId}}
            </div>
        </div>
    </div>

    <div class="default-font-size dashed-border space-between w-100" style="margin-top: 6px;">
        <div style="flex: 0; padding: 2px;">
            <img class="default-qrcode" src="{{patientIdAsQrCode}}" alt={{patientId}}>
        </div>
        <div style="flex: 1; padding: 2px;">
            <div class="space-between">
                <div style="width: 25%;" class="no-wrap"><span class="default-font-size bold">Họ và tên</span> <span class="default-font-size italic">(Full
                        name)</span>:</div>
                <div style="width: 43%;" class="default-font-size uppercase bold">{{patientFullName}}</div>
                <div style="width: 20%;" class="no-wrap"><span class="default-font-size bold">Giới tính</span> <span
                        class="default-font-size italic">(Sex)</span>:</div>
                <div style="width: 12%;" class="default-font-size bold">{{patientGender}}</div>
            </div>
            <div class="space-between">
                <div style="width: 25%;" class="no-wrap"><span class="default-font-size bold">Địa chỉ</span> <span
                        class="default-font-size italic">(Address)</span>:</div>
                <div class="default-font-size" style="width: 43%;">{{patientAddress}}</div>
                <div style="width: 20%;" class="no-wrap"><span class="default-font-size bold">Năm sinh</span> <span
                        class="default-font-size italic">(DOB)</span>:</div>
                <div class="default-font-size" style="width: 12%;">{{patientDateOfBirth}}</div>
            </div>

            <div class="space-between">
                <div style="width: 25%;" class="no-wrap"><span class="default-font-size bold">Chỉ định</span> <span
                        class="default-font-size italic">(Referred by)</span>:</div>
                <div class="default-font-size" style="width: 43%;">{{patientReferredBy}}</div>
                <div style="width: 20%;" class="no-wrap"><span class="default-font-size bold">Ngày khám</span> <span
                        class="default-font-size italic">(Date)</span>:</div>
                <div class="default-font-size" style="width: 12%;">{{examDate}}</div>
            </div>
        </div>
    </div>
</div>